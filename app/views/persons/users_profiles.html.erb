<div class="container text-center">
	<h1>All users</h1>
	<% if User.any? %>
	    <table class="table table-bordered" style="background-color:white; border-radius: 5px;">
	  	  <thead>
	  	    <th class="text-center">â„–</th>
	  	    <th class="text-center">Name</th>
	  	    <th class="text-center">Email</th>
	  	  </thead>
	  	  <tbody>
	  	  	<% number = 1 %>
	  	    <% @users.each do |user| %>
	  	      <tr>
	  	        <td><%= number %></td>
	  	        <td><%= link_to user.username, profile_path(user) %></td>
	  	        <td><%= user.email %></td>
	  	      </tr>
	  	      <% number += 1 %>
	  	    <% end %>
	  	  </tbody>
	    </table>
	<% end %>
</div>